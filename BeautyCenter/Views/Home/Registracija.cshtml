
@model IEnumerable<BeautyCenter.Models.Opshtini>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>

<form asp-controller="Home" asp-action="Registracija" method="post">
    <fieldset>
        <legend>Регистрација</legend>

        <div class="form-group">
            <label>Име и презиме</label>
            <input type="text" class="form-control" name="imeIprezime">

        </div>
        <div class="form-group">
            <label>Email адреса</label>
            <input type="email" class="form-control" name="email">

        </div>
        <div class="form-group">
            <label>Лозинка</label>
            <input type="password" class="form-control" name="lozinka">
        </div>
        <div class="form-group">
            <label>Телефонски број</label>
            <input type="text" class="form-control" name="telBroj">
        </div>

        <fieldset class="form-group">
            <legend>Општина</legend>

            @foreach (var item in Model)
            {
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" name="opshtina" checked="" value="@item.NazivOpshtina">
                        @item.NazivOpshtina
                    </label>
                </div>
            }
        </fieldset>

        <button type="submit" class="btn btn-secondary">Регистрирај се</button>
    </fieldset>
</form>
