@model IEnumerable<BeautyCenter.Models.Saloni>



<h2>Салони</h2>
<br />
<form asp-controller="Home" asp-action="Search" method="get">
    <p>
        <input type="text" name="SearchString" />
        <input type="submit" value="Барај" class="btn btn-secondary"/>
    </p>
</form>
<table class="table">
    <tr>
        <th>Име</th>
        <th><b>Улица</b></th>
        <th>Општина</th>
        <th>Телефонски број</th>
    </tr>

    @foreach(var item in Model)
    {
<tr>
    
    <td>
        <a asp-controller="Home" asp-action="Salon" asp-route-id="@item.IdSalon">@Html.DisplayFor(modelIdem => item.ImeSalon)</a>
    </td>
    <td>
        @item.Ulica
        @item.Broj
    </td>
    <td>
    @if (item.IdOpshtinaNavigation!=null)
    {
            @item.IdOpshtinaNavigation.NazivOpshtina
    }
    </td>
    <td>
        @item.TelBrojSalon
    </td>
</tr>
    
    }
</table>