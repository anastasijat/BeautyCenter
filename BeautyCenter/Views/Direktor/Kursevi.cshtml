@{
    Layout = "~/Views/Shared/DirektorProfil.cshtml";
}
@model BeautyCenter.Models.Direktor

<table class="table">

    <tbody>
        @if (Model.Saloni != null)
        {
            @foreach (var salon in Model.Saloni)
            {
                <tr>
                    <th>
                        Салон: @salon.ImeSalon
                    </th>
                </tr>
                <tr>
                    <th>
                        Курсеви
                    </th>
                    <th>
                        Цена
                    </th>
                </tr>
                @if (salon.Odrzuva != null)
                {
                    @foreach (var item in salon.Odrzuva)
                    {
                        @if (item.IdKursNavigation != null)
                        {
                            <tr>
                                <td>
                                    @item.IdKursNavigation.ImeKurs
                                </td>
                                <td>
                                    @item.IdKursNavigation.CenaKurs
                                </td>
                            </tr>
                        }
                    }
                }
            }
        }

    </tbody>

</table>
<form asp-action="NovKurs" asp-controller="Direktor">
    <button type="submit" class="btn btn-secondary">Додади нов курс</button>
</form>